<!DOCTYPE html>
<html>
  <head>
    <title>Tokopaedi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    </script>

    <%= javascript_pack_tag 'locale_switcher', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="main">
      <%= image_tag 'paedyputih.png', alt: 'The Pragmatic Bookshelf' %>
    <h1><%= @page_title %></h1>
    </header>

    <section class="content">
      <nav class="side_nav">
        <ul>
          <li><a href="/"><%= t('.home') %></a></li>
          <li><a href="/questions"><%= t('.questions') %></a></li>
          <li><a href="/news"><%= t('.news') %></a></li>
          <li><a href="/contact"><%= t('.contact') %></a></li>
          <li><a href="/login"><%= t('.login') %></a></li>
        </ul>

        <% if session[:user_id] %>
          <nav class="logged_in_nav">
            <ul>
            <li>
              <%= link_to 'Orders',orders_path %>
                <% if Order.count != 0%>
                  <a class="badge">
                      <%= Order.count %>
                  </a>
                <% end %>
            </li>
            <li><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= button_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </nav>
        <% end %>
        
        <div id="cart" class="carts">
          <%= render_if @cart && @cart.line_items.any?, @cart %>
        </div>
      </nav>

      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>

      <aside>
        <%= form_tag store_index_path, class: 'locale' do %>
          <li activeClass="active">
            <a href="/en">Eng</a>
          </li>
          <li activeClass="active">
            <a href="/id">Ind</a>
          </li>
        <% end %>
      </aside>
      
    </section>
  </body>
</html>
